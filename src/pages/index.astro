---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Nuclear Nova">
  <main class="min-h-screen">
    <!-- Hero -->
    <section class="relative overflow-hidden bg-base-200">
      <div 
        class="absolute inset-0 bg-cover bg-center opacity-30"
        style="background-image: url('/images/hero-bg.png');"
        
      ></div>

      <!-- Gradient Overlay -->
      <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-black/20"></div>

      <!-- Content -->
      <div class="relative z-10">
        <div class="max-w-6xl mx-auto px-6 py-28 grid lg:grid-cols-2 gap-12 items-center text-white">
          <div data-reveal>
            <p class="uppercase tracking-widest text-sm opacity-80">Developer Studio</p>

            <h1 class="text-5xl font-extrabold leading-tight mt-3">
              Build a site that feels alive.
            </h1>

            <p class="mt-6 text-lg opacity-90">
              A place to design and develop websites with the time to practice my craft.
            </p>

            <div class="mt-8 flex gap-3">
              <a class="btn btn-primary">View Gallery</a>
              <a class="btn btn-ghost btn-outline text-white">Learn more</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Card Feature -->

<section id="card" class="bg-base-100">
  <div class="max-w-6xl mx-auto px-6 py-20">
    <div class="card bg-base-200 shadow-xl" data-reveal>
      <div class="card-body">
        <h2 class="card-title">What you get</h2>
        <ul class="mt-2 space-y-2 opacity-100">
          <li>• Static-first performance</li>
          <li>• PhotoSwipe gallery</li>
          <li>• Tailwind + DaisyUI styling</li>
          <li>• Smooth reveal-on-scroll</li>
        </ul>
        <div class="card-actions mt-6">
          <a class="btn btn-secondary" href="#contact">Get in touch</a>
        </div>
      </div>
    </div>
  </div>
</section>




