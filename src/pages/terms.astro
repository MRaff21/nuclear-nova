<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Terms & Services</title>
    <style>
      body {
        font-family: sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        text-align: center;
        padding: 2rem;
        background: #f5f5f5;
      }
      button {
        margin: 1rem;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        border-radius: 6px;
        cursor: pointer;
        border: none;
      }
      .agree { background: #4caf50; color: white; }
      .disagree { background: #f44336; color: white; }
    </style>
  </head>
  <body>
    <h1>Terms & Services</h1>
    <p>Please read and confirm that you accept our terms before continuing.</p>
    <div>
      <button class="agree" id="agree">I Agree</button>
      <button class="disagree" id="disagree">I Do Not Agree</button>
    </div>

    <script type="module">
      const agreeBtn = document.getElementById('agree');
      const disagreeBtn = document.getElementById('disagree');

      agreeBtn.addEventListener('click', () => {
        // Save confirmation in session storage so we can check on other pages
        sessionStorage.setItem('acceptedTerms', 'true');
        // Redirect to homepage
        window.location.href = '/';
      });

      disagreeBtn.addEventListener('click', () => {
        // Redirect to Google if they disagree
        sessionStorage.setItem('acceptedTerms', 'declined');
        window.location.href = "https://www.google.ca";
      });
    </script>
  </body>
</html>
