<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Terms & Services</title>
 <style>
      body {
        font-family: sans-serif;
        min-height: 100vh;
        display: grid;
        place-items: center;
        background: linear-gradient(135deg, #3a0223, #d1647c, #a31a08);
      }

      .card {
        background: rgba(255, 255, 255, 0.12);
        backdrop-filter: blur(12px);
        border-radius: 16px;
        padding: 2.5rem;
        max-width: 480px;
        color: white;
        box-shadow: 0 20px 50px rgba(0,0,0,0.4);
        animation: fadeUp 0.6s ease-out;
        text-align: center;
      }

      button {
        margin: 1rem;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        transition: transform 0.15s ease, box-shadow 0.15s ease;
      }

      button:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 18px rgba(0,0,0,0.3);
      }

      button:active {
        transform: translateY(0);
        box-shadow: none;
      }

      .agree { background: #4caf50; color: white; }
      .disagree { background: #f44336; color: white; }

      @keyframes fadeUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
    </style>
  </head>
  <body>
    <div class="card">
      <h1>Terms & Services</h1>
      <p>Please confirm before continuing.</p>

      <button class="agree">I Agree</button>
      <button class="disagree">I Do Not Agree</button>
    </div>

    <script type="module">
      const agreeBtn = document.querySelector('.agree');
      const disagreeBtn = document.querySelector('.disagree');

      agreeBtn.addEventListener('click', () => {
        // Save confirmation in session storage so we can check on other pages
        sessionStorage.setItem('acceptedTerms', 'true');
        // Redirect to homepage
        window.location.href = '/';
      });

      disagreeBtn.addEventListener('click', () => {
        // Redirect to Google if they disagree
        sessionStorage.setItem('acceptedTerms', 'declined');
        window.location.href = "https://www.google.ca";
      });
    </script>
  </body>
</html>
