---
import { Image } from "astro:assets";

// Import images explicitly (static = optimized)
import img1 from "../assets/gallery/photo-1.png";
import img2 from "../assets/gallery/photo-2.png";
import img3 from "../assets/gallery/photo-3.png";

const images = [
  { src: img1, alt: "Gallery image 1" },
  { src: img2, alt: "Gallery image 2" },
  { src: img3, alt: "Gallery image 3" },
];
---

<section class="gallery">
  {images.map((image) => (
    <Image
      src={image.src}
      alt={image.alt}
      data-lightbox
      class="gallery-image"
      widths={[400, 800, 1200]}
      sizes="(max-width: 768px) 100vw, 33vw"
    />
  ))}
</section>

<style>
  .gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1rem;
  }

  img {
    width: 100%;
    height: auto;
    border-radius: 6px;
  }
</style>
